<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="02_categories_table" author="Bhavesh">
        <createTable tableName="categories">
           <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_categories_id"/>
            </column>
            <column name="categoryName" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
             <column name="createdAt" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updatedAt" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
    </changeSet>

</databaseChangeLog>